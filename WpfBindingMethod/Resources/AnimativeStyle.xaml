    <Style TargetType="local:CirProgressBarLabel">
        <Setter Property="Point1" Value="0,1000"></Setter>
        <Setter Property="Point2" Value="-1,0"></Setter>
        <Setter Property="Point3" Value="1000,0"></Setter>
        <Setter Property="Point4" Value="1000,1000"></Setter>
        <Setter Property="Foreground" Value="LimeGreen"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CirProgressBarLabel}" >
                    <Grid x:Name="GirdP" Height="{TemplateBinding Height}" Width="{TemplateBinding Width}" >
                        <Label  HorizontalAlignment="{TemplateBinding HorizontalAlignment}" 
                               VerticalAlignment="{TemplateBinding VerticalAlignment}" 
               Style="{DynamicResource LabelStyle2}" Foreground="Transparent">
                        </Label>
                        <Grid Height="{TemplateBinding Height}" HorizontalAlignment="Left" 
                               VerticalAlignment="Bottom" >
                            <Grid.Clip>
                                <GeometryGroup>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigureCollection>
                                                <PathFigure IsClosed="True" StartPoint="{Binding Point1, RelativeSource={RelativeSource TemplatedParent}}">
                                                    <PathFigure.Segments>
                                                        <PathSegmentCollection>
                                                            <LineSegment Point="-1,0"/>
                                                            <LineSegment Point="{Binding Height,Converter={StaticResource CirPointCvr},ConverterParameter=0, RelativeSource={RelativeSource TemplatedParent}}" />
                                                            <LineSegment>
                                                                <LineSegment.Point>
                                                                    <MultiBinding Converter="{StaticResource CirPointCvr2}">
                                                                        <Binding Path="Width" RelativeSource="{RelativeSource TemplatedParent}"></Binding>
                                                                        <Binding Path="Height" RelativeSource="{RelativeSource TemplatedParent}"></Binding>
                                                                    </MultiBinding>
                                                                </LineSegment.Point>
                                                            </LineSegment>
                                                        </PathSegmentCollection>
                                                    </PathFigure.Segments>
                                                </PathFigure>
                                            </PathFigureCollection>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </GeometryGroup>
                            </Grid.Clip>
                            <Label Content=""  HorizontalAlignment="Left" 
                               VerticalAlignment="Bottom" 
               Style="{DynamicResource LabelStyle2}" Foreground="{TemplateBinding Foreground}" 
                                   Height="{TemplateBinding Height}" Width="{TemplateBinding Width}">
                            </Label>
                        </Grid>
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="RecProgressBarLabelStyle" TargetType="local:RecProgressBarLabel">
        <Setter Property="BarLength" Value="1000"></Setter>
        <Setter Property="Foreground" Value="LimeGreen"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:RecProgressBarLabel}" >
                    <Grid Height="{TemplateBinding Height}" Width="{TemplateBinding Width}" >
                            <Grid Width="{TemplateBinding BarLength}" HorizontalAlignment="Left">
                            <Label Content="" HorizontalAlignment="Left" Height="{TemplateBinding Height}" Style="{DynamicResource LabelStyle1}" 
               VerticalAlignment="Top" Width="{TemplateBinding Width}" Foreground="{TemplateBinding Foreground}">
                                </Label>
                            </Grid>
                        <Label Content="" HorizontalAlignment="Left" Height="{TemplateBinding Height}" Style="{DynamicResource LabelStyle1}" 
               VerticalAlignment="Top" Width="{TemplateBinding Width}" Foreground="Transparent"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
   





