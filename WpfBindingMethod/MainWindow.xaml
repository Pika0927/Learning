<Window x:Class="WpfBindingMethod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBindingMethod"
        xmlns:views="clr-namespace:WpfBindingMethod.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" Topmost="True">
    <Grid Width="1000" Height="600">
        <StackPanel Margin="0,0">
            <ComboBox x:Name="SelectUserControl" SelectionChanged="NewUserControl" Width="200" HorizontalAlignment="Left"></ComboBox>
            <ContentControl x:Name="CC1" Grid.Column="1" HorizontalAlignment="Left"></ContentControl>
        </StackPanel>
    </Grid>


</Window>
