    xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" 
    x:Class="WpfBindingMethod.Views.ColorPickerTest"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Height="600" Width="1000">
